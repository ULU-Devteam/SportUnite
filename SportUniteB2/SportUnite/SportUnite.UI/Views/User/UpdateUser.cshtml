@model Microsoft.AspNetCore.Identity.EntityFrameworkCore.IdentityUser

@{
	Layout = "_AdminLayout";
}

<div class="row">
	<h3>Gebruiker wijzigen @Model.UserName </h3>
	<a asp-action="UserList">Terug naar alle gebruikers</a>

	<form class="form-horizontal" asp-action="UpdateUserPost" method="post" novalidate>
		<fieldset>
			@Html.HiddenFor(a => a.Id)
			<div class="form-group edit-table-body">
				<label class="col-md-4 edit-table-header">Gebruikersnaam: </label>
				<div class="col-md-7">
					<input asp-for="UserName" value="@Model.UserName" class="form-control input-md" required="">
					<span asp-validation-for="UserName"></span>
				</div>
			</div>
			<div class="form-group edit-table-body">
				<label class="col-md-4 edit-table-header">Emailadress: </label>
				<div class="col-md-7">
					<input asp-for="Email" value="@Model.Email" class="form-control input-md" required="">
					<span asp-validation-for="Email"></span>
				</div>
			</div>
			<div class="form-group edit-table-body">
				<label class="col-md-4 edit-table-header">Telefoonnummer: </label>
				<div class="col-md-7">
					<input asp-for="PhoneNumber" value="@Model.PhoneNumber" class="form-control input-md" required="">
					<span asp-validation-for="PhoneNumber"></span>
				</div>
			</div>
		</fieldset>
		<div class="text-center">
			<button class="edit-table btn blue-button" type="submit">
				WIJZIGEN
			</button>
		</div>
	</form>
</div>