@model IEnumerable<SportUnite.Domain.Models.Reservation>
@{
	Layout = "_SidebarLayout";
}

<div class="row">
	<h3>Archief reserveringen</h3>
	<div class="row">
		<div class="col-lg-12">
			<input type="text" id="SearchInput" onkeyup="search()" placeholder="Zoeken" class="form ">
		</div>
	</div>
	<table class="table table-sm table-striped archive" id="SearchTable">
		@if (Model.Any())
		{
			<thead>
				<tr>
					<th>Datum &amp; Tijd</th>
					<a href="~/Views/Admin/Archive.cshtml">~/Views/Admin/Archive.cshtml</a>
					<th>Contactpersoon</th>
				</tr>
			</thead>
			<tbody>
				@foreach (var s in Model)
                {
					<tr>
						<td class="main-table">Datum &amp; Tijd</td>
						<td class="main-table">Contactpersoon</td>
						<td class="main-table"><a href="@Url.Action("RestoreReservation", "Archive", s)" title="Zet terug"><i class="fa fa-repeat fa-3x icon-blue" aria-hidden="true"></i></a></td>
					</tr>
                }
			</tbody>}
		else
		{
			<tbody>
				<tr><td>Er zijn nog geen reserveringen gearchiveerd.</td></tr>
			</tbody>}
	</table>
</div>